<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Block Safe | <%= title %></title>

  <link rel="stylesheet" href="css/styles.min.css" />
</head>

<body class="signin-body">
  <%- include("./partials/navbar.ejs") %>
  
  <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>

  <header class="signin-header">
    <div class="signin-container">
      <form class="signin-form" action="upload" method="POST" enctype="multipart/form-data">
        <h3><span>UPLOAD FILE</span></h3>
        <div class="vertical-container">
          <label for="fileName">File Name</label>
          <input type="text" name="fileName" />
        </div>
        <div class="vertical-container">
          <label for="file">Upload a File</label>
          <input type="file" name="file" id="file" />
        </div>
        <input type="submit" value="submit" class="btn" disabled="true" id="btn-dis" />
        
        <input type="hidden" name="account" id="account" value="" />
      </form>
    </div>
  </header>
  <%- include("./partials/footer.ejs") %>
</body>
<script>
    fetch("NCC.json")
.then(response => {
   return response.json();
})
.then(SmartContract => {
  const { ethereum } = window;
  const metamaskIsInstalled = ethereum && ethereum.isMetaMask;
  async function onInit1() {
    if (metamaskIsInstalled) {
      const accounts = await window.ethereum.request({
        method: "eth_requestAccounts",
      });
      const networkId = await window.ethereum.request({
        method: "net_version",
      });
      web3 = new Web3(ethereum)
      const account = accounts[0];
      if (networkId == 80001) {
        console.log(String(account));
        document.getElementById("account").value = String(account);
        document.getElementById("btn-dis").disabled = false;
      var YourContract = await new web3.eth.Contract(SmartContract, "0xCF0F196aEf500ad4624FD28cAb1C7bFaaD1b7557");
      YourContract.methods.createToken("https://ipfs.io/ipfs/QmbPDwHQdBEchkKvUBEuBJCJqUzFbL2nBy1QY6YHx76Wag/xczx","1").send({
              to: "0xCF0F196aEf500ad4624FD28cAb1C7bFaaD1b7557",
              from: account,
              value:web3.utils.toWei((0).toString(), "ether"),
            })

      } else {
        alert("Change Network to Mumbai Testnet");
      }
    } else {
      alert("Connect to Metamask");
    }
  }

  onInit1();
})
</script>

</html>